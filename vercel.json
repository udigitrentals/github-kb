{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,

  "headers": [
    {
      "source": "/(kb|ml/kb)/(.*)\\.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400" },
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    },
    {
      "source": "/(registry|search|cross_links)\\.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400" },
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/registry.json", "destination": "/kb/registry.json" },
    { "source": "/search.json", "destination": "/kb/search.json" },
    { "source": "/cross_links.json", "destination": "/kb/cross_links.json" },
    { "source": "/ml/kb/:path*", "destination": "/kb/:path*" }

    
  ]
}
