{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/registry.json",    "destination": "/docs/registry.json" },
    { "source": "/search.json",      "destination": "/docs/search.json" },
    { "source": "/cross_links.json", "destination": "/docs/cross_links.json" },
    { "source": "/kb/:path*",        "destination": "/docs/:path*" },
    { "source": "/ml/kb/:path*",     "destination": "/docs/:path*" }
  ],
  "headers": [
    {
      "source": "/(registry|search|cross_links)\\.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400" },
        { "key": "Content-Type",  "value": "application/json; charset=utf-8" }
      ]
    },
    {
      "source": "/docs/(.*)\\.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=3600, stale-while-revalidate=86400" },
        { "key": "Content-Type",  "value": "application/json; charset=utf-8" }
      ]
    }
  ]
}
